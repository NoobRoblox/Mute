repeat task.wait() until game:IsLoaded()
task.wait(2)

local ss = game:GetService("SoundService")
pcall(function() ss.Volume = 0 end)

for _, s in ipairs(game:GetDescendants()) do
    if s:IsA("Sound") then
        pcall(function()
            s.Volume = 0
            s:Stop()
        end)
    end
end

game.DescendantAdded:Connect(function(d)
    if d:IsA("Sound") then
        pcall(function()
            d.Volume = 0
            d:Stop()
        end)
    end
end)
